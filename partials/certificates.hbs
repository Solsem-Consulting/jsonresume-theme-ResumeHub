{{#if resume.certificates}}
<section id="certificates">
    <h2>Sertfiseringer</h2>
    {{#each resume.certificates}}
<div class="item">
    {{#if name}}
    <div class="title">
        {{name}}
    </div>
    {{/if}}
    {{#if date}}
    <div class="date">
        {{date}}
    </div>
    {{/if}}
    {{#if issuer}}
    <div class="awarder">
        {{issuer}}
    </div>
    {{/if}}
    {{#if url}}
    <div class="summary">
        <a href="{{url}}">{{url}}</a>
    </div>
    {{/if}}
</div>
    {{/each}}
</section>
{{/if}}